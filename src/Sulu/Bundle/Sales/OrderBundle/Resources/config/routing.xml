<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="order_list" path="/template/order/list.html">
        <default key="_controller">SuluSalesOrderBundle:Template:orderList</default>
    </route>
    <route id="order_address_form" path="/template/order/address.form.html">
        <default key="_controller">SuluSalesOrderBundle:Template:orderAddressForm</default>
    </route>
    <route id="order_form" path="/template/order/form.html">
        <default key="_controller">SuluSalesOrderBundle:Template:orderForm</default>
    </route>

    <route id="order_test" path="/pdf/order-confirmation/{id}">
        <default key="_controller">SuluSalesOrderBundle:Pdf:orderConfirmation</default>
    </route>
</routes>
